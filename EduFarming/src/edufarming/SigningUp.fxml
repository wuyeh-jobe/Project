      <TextField fx:id="txt_answer" layoutX="274.0" layoutY="452.0" prefHeight="25.0" prefWidth="186.0" promptText="Answer" />
      <Label alignment="CENTER" layoutX="235.0" layoutY="139.0" prefHeight="38.0" prefWidth="263.0" textFill="RED" />
